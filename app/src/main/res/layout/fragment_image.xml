<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/fi_image"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_margin="15dp"/>
        <com.phdlabs.sungwon.heyoo.utility.MaterialRippleEffect
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/butterscotch"
            app:mrl_rippleRoundedCorners="5dp">
            <Button
                android:id="@+id/fi_add_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Picture"
                android:background="@android:color/transparent"
                android:textColor="@color/white"
                />
        </com.phdlabs.sungwon.heyoo.utility.MaterialRippleEffect>

        <com.phdlabs.sungwon.heyoo.utility.MaterialRippleEffect
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/butterscotch"
            app:mrl_rippleRoundedCorners="5dp">
            <Button
                android:id="@+id/fi_discard_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Discard"
                android:background="@android:color/transparent"
                android:textColor="@color/white"
                />
        </com.phdlabs.sungwon.heyoo.utility.MaterialRippleEffect>

    </LinearLayout>

    <include layout="@layout/progress_view"/>

</FrameLayout>