<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">

    <FrameLayout
        android:id="@+id/fp_profile_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
        <include layout="@layout/draw_select_photo"/>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Photo"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        fontPath="fonts/NunitoSans-Regular.ttf"/>

    <TextView
        android:layout_marginTop="19dp"
        style="@style/TextAppearance.LoginSmallText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"/>

    <EditText
        android:id="@+id/fp_firstname_input"
        style="@style/TextAppearance.LoginBigText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shadow_box"
        android:inputType="textEmailAddress"
        android:imeOptions="actionNext"
        android:hint="Your First Name"
        android:textColorHint="@color/shadow"/>

    <EditText
        android:id="@+id/fp_lastname_input"
        style="@style/TextAppearance.LoginBigText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shadow_box"
        android:inputType="textEmailAddress"
        android:layout_marginTop="-1dp"
        android:imeOptions="actionNext"
        android:hint="Your Last Name"
        android:textColorHint="@color/shadow"/>

    <TextView
        android:layout_marginTop="30dp"
        style="@style/TextAppearance.LoginSmallText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location"/>

    <EditText
        android:id="@+id/fp_location_input"
        style="@style/TextAppearance.LoginBigText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        android:background="@drawable/bg_shadow_box"
        android:inputType="phone"
        android:imeOptions="actionDone"
        android:hint="Your City"
        android:textColorHint="@color/shadow"/>

    <TextView
        android:layout_marginTop="30dp"
        style="@style/TextAppearance.LoginSmallText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Your Friends"/>

    <FrameLayout
        android:id="@+id/fp_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            style="@style/TextAppearance.LoginBigText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shadow_box"
            android:inputType="phone"
            android:imeOptions="actionDone"
            android:enabled="false"
            android:hint="Connect With Facebook"
            android:textColorHint="@color/fbblue"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/flaticon_1484008394_svg"
            android:layout_margin="7dp"
            android:layout_gravity="end"/>
    </FrameLayout>




    <com.phdlabs.sungwon.heyoo.utility.MaterialRippleEffect
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/fp_next_button"
            android:layout_width="230dp"
            android:layout_height="42dp"
            android:text="Next"
            android:background="@drawable/button_curve_corner"
            android:textColor="@color/white"
            android:elevation="5dp"/>

    </com.phdlabs.sungwon.heyoo.utility.MaterialRippleEffect>


</LinearLayout>