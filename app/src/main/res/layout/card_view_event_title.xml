<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:contentPadding="0dp"
        android:layout_margin="2dp"
        app:cardCornerRadius="3dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="125dp">
            <ImageView
                android:id="@+id/cvet_bullet"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/shape_circle_blue"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="19dp"
                />
            <TextView
                android:id="@+id/cvet_event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_toRightOf="@id/cvet_bullet"
                android:layout_toEndOf="@id/cvet_bullet"
                android:text="Swim Meet - Northwood High"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                fontPath="fonts/NunitoSans-ExtraBold.ttf"/>
            <TextView
                android:id="@+id/cvet_event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cvet_event_title"
                android:layout_toRightOf="@id/cvet_bullet"
                android:layout_toEndOf="@id/cvet_bullet"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:text="Tomorrow - 10:00am - 2:00pm"
                android:textSize="11sp"
                />
            <FrameLayout
                android:id="@+id/cvet_yes_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cvet_bullet"
                android:layout_toEndOf="@id/cvet_bullet"
                android:layout_below="@id/cvet_event_date"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                >
                <include layout="@layout/draw_circle_yes"/>
            </FrameLayout>
            <TextView
                android:id="@+id/cvet_yes_text"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/cvet_yes_button"
                android:text="Yes"
                fontPath="fonts/NunitoSans-Black.ttf"
                android:layout_toRightOf="@id/cvet_bullet"
                android:layout_toEndOf="@id/cvet_bullet"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:textSize="11sp"/>
            <FrameLayout
                android:id="@+id/cvet_maybe_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cvet_yes_button"
                android:layout_toEndOf="@id/cvet_yes_button"
                android:layout_below="@id/cvet_event_date"
                android:layout_marginLeft="100dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="12dp"
                >
                <include layout="@layout/draw_circle_maybe"/>
            </FrameLayout>
            <TextView
                android:id="@+id/cvet_maybe_text"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/cvet_maybe_button"
                android:text="Maybe"
                fontPath="fonts/NunitoSans-Black.ttf"
                android:layout_toRightOf="@id/cvet_yes_button"
                android:layout_toEndOf="@id/cvet_yes_button"
                android:layout_marginLeft="100dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:textSize="11sp"/>
            <FrameLayout
                android:id="@+id/cvet_no_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cvet_maybe_button"
                android:layout_toEndOf="@id/cvet_maybe_button"
                android:layout_below="@id/cvet_event_date"
                android:layout_marginLeft="99dp"
                android:layout_marginStart="99dp"
                android:layout_marginTop="12dp"
                >
                <include layout="@layout/draw_circle_no"/>
            </FrameLayout>
            <TextView
                android:id="@+id/cvet_no_text"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/cvet_maybe_button"
                android:text="No"
                fontPath="fonts/NunitoSans-Black.ttf"
                android:layout_toRightOf="@id/cvet_maybe_button"
                android:layout_toEndOf="@id/cvet_maybe_button"
                android:layout_marginLeft="99dp"
                android:layout_marginStart="99dp"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:textSize="11sp"/>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>