<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    
    <style name="TextAppearance"/>
    
    <style name="TextAppearance.Tab">
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:textColor">@color/menu_highlight</item>
    </style>

    <style name="TextAppearance.LoginSubtext">
        <item name="fontPath">fonts/NunitoSans-Bold.ttf</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textScaleX">1.1</item>
    </style>

    <style name="TextAppearance.LoginSmallText">
        <item name="fontPath">fonts/NunitoSans-Bold.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">.4</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="TextAppearance.LoginBigText">
        <item name="fontPath">fonts/NunitoSans-Bold.ttf</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">.4</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
    </style>

</resources>
