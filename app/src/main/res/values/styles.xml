<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    
    <style name="TextAppearance"/>
    
    <style name="TextAppearance.Tab">
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:textColor">@color/menu_highlight</item>
    </style>

    <style name="TextAppearance.LoginSubtext">
        <item name="fontPath">fonts/NunitoSans-Bold.ttf</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textScaleX">1.1</item>
    </style>

    <style name="TextAppearance.LoginSmallText">
        <item name="fontPath">fonts/NunitoSans-ExtraBold.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="TextAppearance.LoginBigText">
        <item name="fontPath">fonts/NunitoSans-ExtraBold.ttf</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
    </style>

    <style name="TextAppearance.MaterialCalDate" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="fontPath">fonts/NunitoSans-Bold.ttf</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.MaterialCalHeader" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="fontPath">fonts/NunitoSans-Bold.ttf</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    
    <style name="TextAppearance.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="TextAppearance.General">
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">13sp</item>
        <item name="fontPath">fonts/NunitoSans-Regular.ttf</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Toolbar">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="CardView.Margins">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="app:cardCornerRadius">3dp</item>
        <item name="app:cardElevation">3dp</item>
        <item name="app:contentPadding">0dp</item>
    </style>

    <style name="CardView.ContentMargins">
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

</resources>
